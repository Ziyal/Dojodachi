<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
        <link rel="stylesheet" href="~/css/style.css"/>
    </head>
    <body>
        <div id="container">
            <div class="topbar">
                <ul>
                    <li>Fullness: <span>@ViewBag.Dojodachi.Fullness</span></li>
                    <li>Happiness: <span>@ViewBag.Dojodachi.Happiness</span></li>
                    <li>Meals: <span>@ViewBag.Dojodachi.Meals</span></li>
                    <li>Energy: <span>@ViewBag.Dojodachi.Energy</span></li>
                </ul>
            </div>

            <div class="body">
                <img src="~/images/@ViewBag.Dojodachi.Image">
            </div>

            <div class="buttons">
            @{
                if (ViewBag.Dojodachi.Win == true) {
                <form action="/reset" method="post">
                    <input type="hidden" value="reset" name="action">
                    <button type="submit">Play Again?</button>
                </form>                
                }
            
                if (ViewBag.Dojodachi.Playing == false) {
                <form action="/reset" method="post">
                    <input type="hidden" value="reset" name="action">
                    <button type="submit">Play Again?</button>
                </form>                
                }
                else { 
                    <form action="/actions" method="post">
                        <input type="hidden" value="feed" name="action">
                        <button type="submit">Feed</button>
                    </form>
                    <form action="/actions" method="post">
                        <input type="hidden" value="play" name="action">
                        <button type="submit">Play</button>
                    </form>
                    <form action="/actions" method="post">
                        <input type="hidden" value="work" name="action">
                        <button type="submit">Work</button>
                    </form>
                    <form action="/actions" method="post">
                        <input type="hidden" value="sleep" name="action">
                        <button type="submit">Sleep</button>
                    </form>
                }
            }
            </div>

            <div class="return-text">
                <p>@ViewBag.ReturnText</p>
            </div>
        </div>
    </body>
</html>